{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "centos",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "centos",
          "containerPort": 80,
          "policyThreshold": 80,
          "servicePath": "/",
          "uploadType": "image",
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/library/centos:8"
          },
          "envVariables": {
            "WORDPRESS_DB_HOST": "{{env.DB_IP}}:{{env.DB_PORT}}",
            "WORDPRESS_DB_NAME": "centos"
          },
          "volumeMounts": {
            "/var/www/html": "centos-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "centos-cfs"
        }
      ]
    }
  }
}
