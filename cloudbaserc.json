{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "wordpress",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "wordpress",
          "containerPort": 80,
          "policyThreshold": 80,
          "servicePath": "/",
          "uploadType": "image",
          "imageInfo": {
            "imageUrl": "wordpress:latest"
          },
          "envVariables": {
            "WORDPRESS_DB_HOST": "{{env.DB_IP}}:{{env.DB_PORT}}",
            "WORDPRESS_DB_NAME": "wordpress"
          },
          "volumeMounts": {
            "/var/www/html": "wordpress-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [
        {
          "type": "CFS",
          "name": "wordpress-cfs"
        },
        {
          "type": "CynosDB",
          "name": "wordpress",
          "envMap": {
            "IP": "DB_IP",
            "PORT": "DB_PORT",
            "USERNAME": "WORDPRESS_DB_USER",
            "PASSWORD": "WORDPRESS_DB_PASSWORD"
          }
        }
      ]
    }
  }
}
